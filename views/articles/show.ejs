<h1 class="title"><%= article.title %></h1>
<h2 class="byline">By <%= article.author.getFullName() %></h2>
<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<h3>Comments</h3>
<%article.comments.forEach(comment => {%>
  <!--TEST TO SEE IF COMMENT.COMMENT DISPLAYS COMMENT-->
  <div class = "comment">
    <strong><p><%=comment.dataValues.name%></p></strong>
    <p><%=comment.dataValues.content%></p>
  </div>
  
  
<%})%>

<hr />

<h4>Add a Comment</h4>
<form action="/comments" method="POST">
  <div>
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" required>
  </div>

  <div>
    <label for="name">Comment</label>
    <input type="text" class="form-control" id="content" name="content" required>
  </div>

  <div>
    <input type="hidden" class="form-control" id="articleId" name="articleId" value="<%=article.id%>" required>
  </div>

  <input type="submit">
</form>

<a href="/">&rarr; Back Home</a>
<a href="/authors">&rarr; View Authors</a>

<h1>Create a New Post</h1>

<form action="/articles" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" required>
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    <select name="authorId" id="author" class="form-control" required>
      <% authors.forEach(function(author) { %>
        <option value="<%= author.id %>"><%= author.getFullName() %></option>
      <% }) %>
    </select>
    <p>If your name doesn't show up, please <a id="newAuthorSignup" href="/authors/new">sign up</a> to be an author.</p>
  </div>

  <div class="form-group">
    <label for="content">Content</label>
    <textarea type="text" class="form-control" id="content" name="content" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary">
</form>

<a href="/">&larr; Back to Home</a>
<a href="/authors"> View Authors</a>
